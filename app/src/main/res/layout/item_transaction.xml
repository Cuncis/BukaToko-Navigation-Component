<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <import type="android.view.View" />
        <variable
            name="transaction"
            type="com.cuncis.bukatoko.data.model.Transaction.Response.Data" />
    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginBottom="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_title"
                android:textStyle="bold"
                android:text="@{transaction.transaction_code}"
                tools:text="Title" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_status"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Status"
                    android:text="@{transaction.status_transaction}"
                    android:textStyle="italic" />

                <Button
                    android:id="@+id/btn_upload"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:padding="5dp"
                    android:background="@drawable/custom_button"
                    android:text="@string/upload"
                    android:textColor="@color/colorWhite"
                    android:textAllCaps="false"
                    android:textSize="12sp"
                    android:visibility="@{transaction.status_transaction.equals(`pending`) ? View.GONE : View.VISIBLE}"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>
        </LinearLayout>

    </androidx.cardview.widget.CardView>
</layout>